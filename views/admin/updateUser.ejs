<%- include("../partials/adminHeader") %>
<h1>Update a user</h1>
<div id="mainContainer">
    <form action="/admin/panel/user/update" method="POST">
        <div>
            <label for="name">Payee Name</label>
            <input type="text" name="name" value="<%= user.name %>" readonly>
        </div>
        <div>
            <label for="username">Username</label>
            <input type="text" name="username" value="<%= user.username%>">
        </div>
        <div>
            <label for="email">Email</label>
            <input type="text" name="email" value="<%= user.email%>">
        </div>
        <div>
            <label for="password">Temporary Password</label>
            <input type="text" name="password" value="" autocomplete="off">
        </div>
        <div>
            <label for="permissions">User Role</label>
            <select id="permSelect" name="permissions">
                <option value=1>User</option>
                <option value=0>Admin</option>
            </select>
        </div>
        <div>
            <button type="submit" class="mainButtonA">Update</button>
        </div>
    </form>
    <a href="/admin/panel/user/<%= user.id %>" class="mainABasic">Back</a>
    <h4 class="error"><%= message %></h4>
</div>